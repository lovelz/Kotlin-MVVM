    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.lz.kotin.mvvm.ui.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_main_fragment_to_play_fragment"
            app:destination="@+id/play_fragment"/>
    </fragment>

    <fragment
        android:id="@+id/play_fragment"
        android:name="com.lz.kotin.mvvm.ui.play.PlayerFragment"
        android:label="PlayerFragment"
        tools:layout="@layout/fragment_player">

    </fragment>

</navigation>